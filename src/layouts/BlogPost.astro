---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import FormattedDate from "../components/FormattedDate.astro";

import type { MarkdownHeading } from "astro";

type Props = CollectionEntry<"blog">["data"] & {
  headings: MarkdownHeading[];
};

const { title, description, publishedAt, editedAt, headings } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title ?? ''} description={description ?? ''} />
	</head>

	<body class="bg-white">
		<Header />
		<main class="max-w-3xl mx-auto px-4 py-12">
      <article>
        <div class="mb-8 text-center">
          <div class="text-gray mb-2">
            <FormattedDate date={publishedAt} />
            {
              editedAt && (
                <div class="italic">
                  更新日 <FormattedDate date={editedAt} />
                </div>
              )
            }
          </div>
          <h1 class="mb-4">{title}</h1>
          <hr class="border-gray-light" />
        </div>

        {headings && headings.length > 0 && (
          <nav class="toc mb-8 p-6 bg-gray-light rounded-lg">
            <ul class="list-none p-0 m-0">
              {headings.map((heading) => (
                <li class="last:mb-0" style={{ paddingLeft: `${(heading.depth - 2) * 1.5}rem` }}>
                  <a
                    href={`#${heading.slug}`}
                    class="text-gray-dark hover:text-accent hover:bg-white px-3 py-1 rounded transition-colors duration-200 block no-underline"
                  >
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <div class="prose prose-zinc max-w-none">
          <slot />
        </div>
      </article>
		</main>
		<Footer />
	</body>
</html>

